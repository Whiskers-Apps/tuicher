{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tuicher",
  "version": "1.0.0",
  "identifier": "org.whiskersapps.tuicher",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "tuicher",
		"center": true,
		"alwaysOnTop": true,
		"resizable": true,
		"decorations": false,
		"resizable": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": [
            "**/*"
          ]
        }
      }
	}
  },
  "bundle": {
    "active": true,
    "targets": "deb",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
